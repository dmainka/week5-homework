<div class='container'>
  <h2>Add a new comic</h2>
</div>

<div class='row'>
  <!-- RENDER THE FORM PARTIAL HERE. -->
  <div class="col-md-6">
    <form action="/comics/create">
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" class="form-control" id="title" placeholder="Enter comic title here">
      </div>
      <div class="form-group">
        <label for="year">Description</label>
        <input type="text" name="description" class="form-control" id="description" placeholder="Enter comic description here">
      </div>
      <div class="form-group">
        <label for="title">Image URL</label>
        <input type="text" name="image_url" class="form-control" id="image_url" placeholder="Enter URL to the comic image">
      </div>
      <button type="submit" class="btn btn-default">Create Comic</button>
    </form>
  </div>
</div>

<div class='container'>
  <br>
  <%= link_to 'Back to all comics', comics_path %>
</div>
